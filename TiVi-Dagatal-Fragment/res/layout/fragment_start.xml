<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_gravity="center"
	    android:paddingTop="30dp">
    
		<TextView 
			      android:id="@+id/dagatal_text"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
		          android:text="@string/dagatal"
		          android:drawableLeft="@drawable/ic_cal_icon_start"
		          android:padding="10dp"
		          android:drawablePadding="15dp"
		          android:textSize="20sp"
   				  android:shadowRadius="10" 
   				  android:onClick="startCal"                
                  android:clickable="true"/>
		    
		<TextView 
			      android:id="@+id/thaettir_text"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
		          android:text="@string/thaettirnir_minir"
		          android:drawableLeft="@drawable/ic_list_start"
		          android:padding="10dp"
		          android:drawablePadding="15dp"
		          android:textSize="20sp" 
   				  android:onClick="startList"                
                  android:clickable="true"/>

		<TextView 
			      android:id="@+id/leit_text"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
		          android:text="@string/leit"
		          android:drawableLeft="@drawable/ic_search_start"
		          android:padding="20dp"
		          android:drawablePadding="15dp"
		          android:textSize="20sp" 
   				  android:onClick="startSearch"                
                  android:clickable="true"
                  android:layout_marginLeft="-10dp"/>
    

		<TextView 
			      android:id="@+id/vinsaelir_text"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
		          android:text="@string/vinsaelir_thaettir"
		          android:drawableLeft="@drawable/ic_popular_start"
		          android:padding="10dp"
		          android:drawablePadding="15dp"
		          android:textSize="20sp" 
   				  android:onClick="startPop"                
                  android:clickable="true"/>

		<TextView 
			      android:id="@+id/info_text"
			      android:layout_width="wrap_content"
				  android:layout_height="wrap_content"
		          android:text="@string/upplysingar"
		          android:drawableLeft="@drawable/ic_info_logo_start"
		          android:padding="10dp"
		          android:drawablePadding="15dp"
		          android:textSize="20sp" 
   				  android:onClick="startInfo"                
                  android:clickable="true"/>
	</LinearLayout>
</LinearLayout>
